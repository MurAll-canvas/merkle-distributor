  "scripts": {
    "precompile": "rimraf ./build/",
    "compile": "waffle",
    "pretest": "yarn compile",
    "test": "mocha",
    "generate-merkle-root": "ts-node scripts/generate-merkle-root.ts",
    "generate-erc1155-merkle-root": "ts-node scripts/generate-erc1155-merkle-root",
    "generate-merkle-root:example": "ts-node scripts/generate-merkle-root.ts --input scripts/example.json",
    "prepublishOnly": "yarn test",
    "split-claims": "scripts/split_claims_json.sh",
    "contracts:test": "npx hardhat test",
    "contracts:compile": "npx hardhat compile",
    "contracts:deploy-test-token": "npx hardhat run scripts/deploy_test_custom_token.js --network",
    "contracts:deploy-token-distribution": "npx hardhat run scripts/deploy_token_distribution_contract.js --network",
    "contracts:deploy-nft-distribution": "npx hardhat run scripts/deploy_nft_distribution_contract.js --network",
    "contracts:verify": "npx hardhat verify --constructor-args arguments_merkle.js --network",
    "contracts:test-with-gas": "REPORT_GAS=true npx hardhat test --network localhost",
    "contracts:coverage": "npx hardhat coverage"
