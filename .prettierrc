{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": [
        "*.js",
        "*.ts"
      ],
      "options": {
        "bracketSpacing": true,
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
      }
    }
  ]
}
